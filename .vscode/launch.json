{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Angular: Run",
      "type": "chrome",
      "request": "launch",
      "preLaunchTask": "npm: start",
      "url": "http://localhost:4200/category/form"
    },
    {
      "name": "Angular: Test (Debug)",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "test"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "autoAttachChildProcesses": true
    },
    {
      "name": "Angular: Test (Cobertura)",
      "type": "chrome",
      "request": "launch",
      "file": "${workspaceFolder}/coverage/vendor_app_angular/index.html",
      "preLaunchTask": "Gerar Cobertura",
      "sourceMaps": true
    }
  ]
}
